<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.restaurantemobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity android:name="br.com.restaurantemobile.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.EntrancePlatesActivity"></activity>
        <activity android:name=".activity.MainPlatesActivity"></activity>
        <activity android:name=".activity.SaladPlatesActivity"></activity>
        <activity android:name=".activity.DessertActivity"></activity>
        <activity android:name=".activity.DrinkActivity"></activity>
        <activity android:name=".activity.PaymentActivity"></activity>

    </application>

</manifest>